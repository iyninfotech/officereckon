                   <com.score3s.android.fontStyle.TextViewMedium
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:layout_weight="1.0"
                       android:padding="@dimen/_5sdp"
