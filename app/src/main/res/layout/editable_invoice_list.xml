<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/White"
    android:orientation="vertical">

    <!-- Header aligned to top -->
    <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:id="@+id/toolbar"
            android:orientation="horizontal">

            <com.score3s.android.fontStyle.ButtonBold
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:textAllCaps="false"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/background_outlet_cell"
                android:textSize="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_5sdp"/>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:tint="@android:color/white"
                android:id="@+id/btnCancel"
                android:src="@drawable/avd_pathmorph_drawer_arrow_to_hamburger"
                android:layout_margin="@dimen/_5sdp"/>

            <com.score3s.android.fontStyle.TextViewBlack
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/appbarTitleTVtextColor"
                android:layout_centerVertical="true"
                android:id="@+id/titlePopup"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"/>

        </RelativeLayout>

    <!-- Middle  -->
