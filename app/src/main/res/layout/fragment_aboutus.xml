<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutusFragment"
    android:background="#FFF">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo" />


                <com.score3s.android.fontStyle.TextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:gravity="center"
                    android:text="Score 3S Cloud"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_25sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:orientation="vertical">


                    <com.score3s.android.fontStyle.TextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:text="Version Details:"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/white" />


                    <com.score3s.android.fontStyle.TextViewMedium
                        android:id="@+id/tvVersionDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textAlignment="gravity"
                        android:padding="@dimen/_2sdp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:lines="2"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@color/white" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:orientation="vertical">


                    <com.score3s.android.fontStyle.TextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:text="Contact us:"
                        android:textAlignment="gravity"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/white" />

                    <com.score3s.android.fontStyle.TextViewMedium
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="gravity"
                        android:padding="@dimen/_2sdp"
                        android:text="Infozeal eSolutions Private Limited"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/white" />

                    <com.score3s.android.fontStyle.TextViewMedium
                        android:id="@+id/tvCompanyDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:textAlignment="gravity"
                        android:padding="@dimen/_2sdp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:singleLine="false"
                        android:lines="3"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@color/White" />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</RelativeLayout>