    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/logo_app" />


                <com.infozealrecon.android.fontStyle.TextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:gravity="center"
                    android:text="LOGIN"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_25sdp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:orientation="vertical">


                    <com.infozealrecon.android.fontStyle.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:text="USERNAME"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp" />


                    <com.infozealrecon.android.fontStyle.EdittextRegular
                        android:id="@+id/edtUserID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Please enter User Name"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@color/colorPrimary" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:orientation="vertical">


                    <com.infozealrecon.android.fontStyle.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_2sdp"
                        android:text="USER PASSWORD"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp" />


                    <com.infozealrecon.android.fontStyle.EdittextRegular
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Please enter User Password"
                        android:inputType="textPassword"
                        android:padding="@dimen/_2sdp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="@dimen/_2sdp"
                        android:background="@color/colorPrimary" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:weightSum="2">


                    <com.infozealrecon.android.fontStyle.ButtonRegular
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_80sdp"
                        android:layout_marginRight="@dimen/_80sdp"
                        android:layout_weight="2"
                        android:background="@drawable/button_background"
                        android:minHeight="@dimen/_35sdp"
                        android:text="Login"
                        android:textAllCaps="false"
                        android:textColor="@color/appbarTitleTVtextColor"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold|italic" />

                    <com.infozealrecon.android.fontStyle.TextViewBold
                        android:id="@+id/tvDemoRequest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textColorLink="@color/colorPrimary"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold|italic" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>