<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:id="@+id/SearchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/image"
            android:src="@android:drawable/ic_search_category_default"/>

        <com.score3s.android.fontStyle.EdittextRegular
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/image"
            android:background="@null"
            android:hint="Search..."
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@id/image"
            android:background="@color/grey"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/background_outlet_list"
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <com.score3s.android.fontStyle.TextViewBold
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Sr"
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content" />


            <com.score3s.android.fontStyle.TextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Invoice No."
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center" />


            <com.score3s.android.fontStyle.TextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Client Name"
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <com.score3s.android.fontStyle.TextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount"
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>
<ScrollView
    android:layout_below="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="2"
            android:isScrollContainer="false"
            android:id="@+id/listViewinVoice"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:visibility="gone"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_weight="0"
            android:layout_marginTop="@dimen/_4sdp"
            android:id="@+id/total"
            android:layout_below="@+id/listViewinVoice"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:background="@drawable/background_outlet_list"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">


            <com.score3s.android.fontStyle.TextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/White"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center"
                android:gravity="center" />


            <com.score3s.android.fontStyle.TextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total"
                android:textColor="@color/White"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <com.score3s.android.fontStyle.TextViewBold
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="300"
                android:textColor="@color/White"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        </LinearLayout>
</ScrollView>
    </RelativeLayout>
    </LinearLayout>
</FrameLayout>