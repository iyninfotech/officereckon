<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_2sdp"
            android:padding="@dimen/_1sdp"
            android:background="@color/SearchBYLayout"
            android:weightSum="6.0">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.0">

                <RelativeLayout
                    android:id="@+id/LayoutItemSearchBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.infozealrecon.android.fontStyle.TextViewMedium
                        android:id="@+id/selectItemSearchBy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Black"
                        android:textColorHint="@color/Black"
                        android:textSize="@dimen/_12sdp" />


                    <ImageView
                        android:id="@+id/imageItemSerchBy"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_keyboard_arrow_down_24dp_searchable"
                        android:tint="@color/Black" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/LayoutItemSearchBy"
                    android:background="#C8C8C8" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.0">

                <com.infozealrecon.android.fontStyle.EdittextBold
                    android:id="@+id/edtItemSearchBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#D6D6D6"
                    android:hint="Enter Value"
                    android:inputType="text"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_10sdp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <!--  <com.score3s.android.fontStyle.EdittextBold
                      android:id="@+id/edtItemSearchBya"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:backgroundTint="#D6D6D6"
                      android:hint="Enter Value"
                      android:inputType="text"
                      android:maxLength="50"
                      android:singleLine="true"
                      android:textColor="@color/Black"
                      android:textSize="@dimen/_10sdp" />-->

                <com.infozealrecon.android.fontStyle.ButtonBold
                    android:id="@+id/btnSearchBy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/myborder"
                    android:text="GET"
                    android:textAllCaps="false"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/SearchLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp">


            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_search_category_default" />

            <com.infozealrecon.android.fontStyle.EdittextRegular
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/image"
                android:background="@null"
                android:hint="Search..."
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/image"
                android:background="@color/grey" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/background_outlet_list"
                android:orientation="horizontal"
                android:weightSum="4">

                <com.infozealrecon.android.fontStyle.TextViewBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:gravity="left"
                    android:text="ID"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_10sdp" />


                <com.infozealrecon.android.fontStyle.TextViewBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.7"
                    android:gravity="left"
                    android:text="Client Name"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_10sdp" />

                <com.infozealrecon.android.fontStyle.TextViewBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Mobile No."
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_10sdp" />

                <com.infozealrecon.android.fontStyle.TextViewBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="City"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listViewOutlet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/mainLayout"
                android:layout_marginBottom="@dimen/_8sdp">

            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>