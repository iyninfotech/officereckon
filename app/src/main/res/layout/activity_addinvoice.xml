<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Header aligned to top -->
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:id="@+id/toolbar"
        android:orientation="horizontal">

        <com.score3s.android.fontStyle.ButtonBold
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/background_outlet_cell"
            android:textSize="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_5sdp"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:tint="@android:color/white"
            android:id="@+id/btnBack"
            android:src="@drawable/avd_pathmorph_drawer_arrow_to_hamburger"
            android:layout_margin="@dimen/_5sdp"/>

        <com.score3s.android.fontStyle.TextViewBlack
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/appbarTitleTVtextColor"
            android:layout_centerVertical="true"
            android:id="@+id/title"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Add Invoice"/>

    </RelativeLayout>

    <!-- Header Control section -->
    <RelativeLayout
        android:id="@+id/Headsection"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_165sdp"
        android:background="@color/White"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/f_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_1sdp"
            android:weightSum="2.0">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3">


            <RelativeLayout
                android:id="@+id/layoutDate"
                android:onClick="openDatePickerDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.score3s.android.fontStyle.TextViewMedium
                    android:id="@+id/selectDate"
                    android:layout_weight="1.3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Date"
                    android:padding="@dimen/_8sdp"
                    android:textColorHint="#000"
                    android:textColor="#000"
                    android:textSize="@dimen/_10sdp" />


                <ImageView
                    android:layout_centerVertical="true"
                    android:tint="@color/Black"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageDate"
                    android:src="@drawable/ic_keyboard_arrow_down_24dp_searchable"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    />
            </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7">

            <RelativeLayout
                android:id="@+id/layoutDivision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.score3s.android.fontStyle.TextViewMedium
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/tvDivision"
                    android:layout_weight="0.7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Division"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/colorPrimary"/>


                <ImageView
                    android:layout_centerVertical="true"
                    android:tint="@color/Black"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageDivision"
                    android:src="@drawable/ic_keyboard_arrow_down_24dp_searchable"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    />

            </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C8C8C8" />

            <RelativeLayout
                android:id="@+id/layoutRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.score3s.android.fontStyle.TextViewMedium
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/tvRoute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Route"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/colorPrimary"
                    />

                <ImageView
                    android:layout_centerVertical="true"
                    android:tint="@color/Black"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageRoute"
                    android:src="@drawable/ic_keyboard_arrow_down_24dp_searchable"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C8C8C8" />
            <RelativeLayout
                android:id="@+id/layoutSaleman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.score3s.android.fontStyle.TextViewMedium
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/tvSaleman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Salesman"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/colorPrimary"
                    />

                <ImageView
                    android:layout_centerVertical="true"
                    android:tint="@color/Black"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageSaleman"
                    android:src="@drawable/ic_keyboard_arrow_down_24dp_searchable"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C8C8C8" />

            <RelativeLayout
                android:id="@+id/layoutClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.score3s.android.fontStyle.TextViewMedium
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/tvClient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Client"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/colorPrimary"
                    />

                <ImageView
                    android:layout_centerVertical="true"
                    android:tint="@color/Black"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageClient"
                    android:src="@drawable/ic_keyboard_arrow_down_24dp_searchable"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C8C8C8" />

            <com.score3s.android.fontStyle.ButtonBold
                android:id="@+id/btnAdd"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="Add Item"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/myborder"
                android:textColor="@color/appbarTitleTVtextColor"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"/>


        </LinearLayout>
    </RelativeLayout>

    <!-- Footer aligned to bottom -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_28sdp"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.score3s.android.fontStyle.TextViewMedium
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.2"
                android:paddingLeft="@dimen/_5sdp"
                android:text="Round off (+/-)"
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp" />


            <com.score3s.android.fontStyle.TextViewBold
                android:id="@+id/tvPointValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp"/>

            <com.score3s.android.fontStyle.TextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:text="Net"
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp" />


            <com.score3s.android.fontStyle.TextViewBold
                android:id="@+id/totalamt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1.5"
                android:text="0"
                android:textColor="@color/White"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

    </RelativeLayout>

    <!-- Scrollable Item below header and above footer -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/Headsection"
        android:layout_above="@+id/footer"
        tools:listitem="@layout/activity_invoice_p_details"
        android:id="@+id/listAddInvoice"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>